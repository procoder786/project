<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailedItemView">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="200dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/imageview_id"
                android:layout_width="match_parent"
                android:layout_height="178dp"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <View

                    android:id="@+id/Default_imageView"
                    android:background="@color/placeholder_bg"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/Detailed_GirlImage"

                    android:layout_width="170dp"

                    android:layout_height="170dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"

                    android:layout_marginEnd="8dp"
                    android:background="@drawable/female"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView

                    android:id="@+id/Detailed_BOYImage"

                    android:layout_width="170dp"

                    android:layout_height="170dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"

                    android:layout_marginEnd="8dp"
                    android:background="@drawable/male"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView

                    android:id="@+id/Detailed_Image"

                    android:layout_width="170dp"

                    android:layout_height="170dp"

                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"

                    android:layout_marginEnd="8dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView

                android:id="@+id/Detail_name"

                android:layout_width="match_parent"

                android:layout_height="34dp"

                android:layout_marginTop="32dp"

                android:paddingLeft="35dp"

                android:textColor="#000000"

                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/imageview_id"

                app:layout_constraintHorizontal_bias="0.214"

                app:layout_constraintStart_toStartOf="@+id/imageview_id"

                app:layout_constraintTop_toBottomOf="@+id/imageview_id"
                tools:ignore="MissingConstraints" />


            <TextView
                android:id="@+id/Detail_classs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="@+id/Detail_name"
                app:layout_constraintStart_toStartOf="@+id/Detail_name"
                app:layout_constraintTop_toBottomOf="@+id/Detail_name" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lolipop"
                android:layout_marginTop="10dp"

                app:layout_constraintEnd_toEndOf="@+id/Detail_classs"
                app:layout_constraintStart_toStartOf="@+id/Detail_classs"
                app:layout_constraintTop_toBottomOf="@+id/Detail_classs">
            <TextView
                android:id="@+id/indoorhome"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:gravity="center"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


 <LinearLayout

                android:id="@+id/home_l"

                android:layout_width="289dp"

                android:layout_height="20dp"

                android:layout_marginTop="20dp"

                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="@+id/lolipop"
                app:layout_constraintStart_toStartOf="@+id/lolipop"
                app:layout_constraintTop_toBottomOf="@+id/lolipop"

              >
                <TextView


                    android:layout_width="33dp"

                    android:textColor="#000000"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"

                    android:text="Age" />

                <TextView

                    android:id="@+id/Detail_age"

                    android:layout_width="30dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center"/>
                 <TextView


                    android:layout_width="30dp"
                     android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                     android:layout_weight="1"
                    android:text="Yrs"/>


            </LinearLayout>

            <LinearLayout

                android:id="@+id/qualification_layout_id"

                android:layout_width="289dp"

                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"

                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="@+id/home_l"
                app:layout_constraintStart_toStartOf="@+id/home_l"
                app:layout_constraintTop_toBottomOf="@+id/home_l">


                <TextView

                    android:id="@+id/qualification_id"

                    android:layout_width="123dp"

                    android:layout_height="match_parent"

                    android:layout_marginLeft="8dp"
                    android:text="Qualification"
                    android:textColor="#000000"


                    app:layout_constraintStart_toStartOf="@+id/qualification_layout_id"

                    app:layout_constraintTop_toTopOf="@+id/qualification_layout_id" />

                <TextView

                    android:id="@+id/Detail_qualification"

                    android:layout_width="133dp"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"

                    android:layout_weight="1"

                    app:layout_constraintEnd_toEndOf="@+id/qualification_layout_id"

                    app:layout_constraintHorizontal_bias="1.0"

                    app:layout_constraintStart_toEndOf="@+id/qualification_id"
                    tools:layout_editor_absoluteY="291dp" />

            </LinearLayout>

            <LinearLayout

                android:id="@+id/experience_layout_id"

                android:layout_width="289dp"

                android:layout_height="20dp"

                android:layout_marginTop="8dp"
                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="@+id/qualification_layout_id"
                app:layout_constraintStart_toStartOf="@+id/qualification_layout_id"

                app:layout_constraintTop_toBottomOf="@+id/qualification_layout_id">

                <TextView

                    android:id="@+id/experience_id"

                    android:layout_width="36dp"

                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingStart="8dp"

                    android:textColor="#000000"

                    android:paddingLeft="8dp"
                    android:text="Experience" />

                <TextView

                    android:id="@+id/Detail_experience"

                    android:layout_width="30dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:gravity="center"
                    android:layout_weight="1"
 />             <TextView


                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Yrs"/>

            </LinearLayout>

            <LinearLayout

                android:id="@+id/home_layout_id"

                android:layout_width="289dp"

                android:layout_height="20dp"

                android:layout_marginTop="8dp"

                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="@+id/experience_layout_id"
                app:layout_constraintHorizontal_bias="0.0"

                app:layout_constraintStart_toStartOf="@+id/experience_layout_id"
                app:layout_constraintTop_toBottomOf="@+id/experience_layout_id">

                <TextView

                    android:id="@+id/home_tutor_price"

                    android:layout_width="33dp"

                    android:textColor="#000000"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"

                    android:text="Fee" />

                <TextView

                    android:id="@+id/Detail_fee"

                    android:layout_width="60dp"

                    android:layout_height="match_parent"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
 />


            </LinearLayout>

            <LinearLayout

                android:id="@+id/class_layout_id"

                android:layout_width="289dp"

                android:layout_height="20dp"


                android:layout_marginTop="8dp"

                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/home_layout_id"

                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/home_layout_id"

                app:layout_constraintTop_toBottomOf="@+id/home_layout_id">

                <TextView

                    android:id="@+id/class_fee_id"

                    android:layout_width="125dp"

                    android:layout_height="20dp"

                    android:textColor="#000000"

                    android:layout_marginLeft="8dp"
                    android:text="Subject" />

                <TextView
                    android:id="@+id/Detail_subject"

                    android:layout_width="143dp"

                    android:layout_height="20dp"

                    android:layout_marginLeft="8dp"
 />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tutor_type_layout_id"

                android:layout_width="289dp"

                android:layout_height="20dp"

                android:layout_marginTop="8dp"

                android:orientation="horizontal"

                app:layout_constraintEnd_toEndOf="@+id/class_layout_id"

                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/class_layout_id"

                app:layout_constraintTop_toBottomOf="@+id/class_layout_id">

                <TextView
                    android:layout_width="125dp"

                    android:layout_height="20dp"

                    android:textColor="#000000"

                    android:layout_marginLeft="8dp"

                    android:text="Nearest Location" />

                <TextView

                    android:id="@+id/Detail_location"

                    android:layout_width="131dp"

                    android:layout_height="20dp"

                    android:layout_marginLeft="8dp"

 />


            </LinearLayout>

            <LinearLayout

                android:id="@+id/subject_layout"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"

                android:orientation="vertical"
                android:paddingLeft="35dp"

                app:layout_constraintEnd_toEndOf="@+id/tutor_type_layout_id"
                app:layout_constraintHorizontal_bias="0.0"

                app:layout_constraintStart_toStartOf="@+id/tutor_type_layout_id"
                app:layout_constraintTop_toBottomOf="@+id/tutor_type_layout_id">

                <TextView
                    android:layout_width="125dp"

                    android:layout_height="match_parent"

                    android:layout_marginLeft="8dp"

                    android:text="Address"

                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Detail_address"
                    android:layout_width="310dp"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="10dp"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/subj"

                android:layout_width="match_parent"
android:layout_marginTop="20dp"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingLeft="35dp"
                app:layout_constraintTop_toBottomOf="@+id/subject_layout">

                <TextView
                    android:layout_width="125dp"

                    android:layout_height="match_parent"

                    android:layout_marginLeft="8dp"

                    android:text="Description"

                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Detail_description"
                    android:layout_width="310dp"

                    android:layout_height="wrap_content"

                    android:layout_marginLeft="8dp"

                    android:layout_marginTop="10dp"

                  />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="286dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/subj"
                android:layout_marginTop="30dp">

                <EditText
                    android:id="@+id/student_message"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#D8D4D4"
                    android:focusedByDefault="false"
                    android:focusableInTouchMode="true"
                    android:hint="Type a message for tutor here                 Example: hi sir i am aman please give me a call on this no.9897"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Send or Replace your previous message."
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/student_message" />

                <LinearLayout
                    android:id="@+id/studentPhoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/msg">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Enter you phone no. first"
                        android:textColor="#000000"/>
                    <EditText
                        android:id="@+id/studentphoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:padding="6dp"
                        android:background="@drawable/circle_grey_backgrnd"/>
                </LinearLayout>

                <Button
                    android:id="@+id/send_student_message"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/round_blue_buttons"
                    android:padding="3dp"
                    android:text="Send"

                    android:layout_marginTop="5dp"
                    android:textColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/studentPhoneLayout"/>

                <Button
                    android:id="@+id/sentStudent_message"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/round_green_button"
                    android:padding="3dp"
                    android:layout_marginTop="5dp"
                    android:text="Sent"
                    android:textColor="#ffffff"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/studentPhoneLayout" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#00bbff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Call Now"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="30dp"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:textStyle="bold"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="5dp"
            android:id="@+id/Detail_callButton"
            android:src="@drawable/blue_call2"/>
        <TextView
            android:id="@+id/Detail_feefee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="30dp"
      android:layout_marginLeft="5dp"
            android:textColor="#ffffff"
            android:paddingLeft="25dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Rs"
            android:textSize="30dp"
            android:textColor="#ffffff"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>