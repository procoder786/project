                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="NAME"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_name"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="AMAN"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="MOBILE NO"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_MOBILE"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="9798******"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textAllCaps="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="AADHAR NO"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_AADHAR"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="xxxxxxxxxxxx"
                        android:inputType="number"
                        android:paddingLeft="20dp"
                        android:textAllCaps="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="AGE"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_AGE"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:background="@drawable/right_halfcut"

                        android:hint="1"
                        android:inputType="number"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/left_half_cut"
                        android:hint="Years"
                        android:inputType="number" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="GENDER"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/form_GENDER"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="QUALIFICATION"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_QUALIFICATION"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="AMAN"
                        android:inputType="text"
                        android:paddingLeft="20dp"
                        android:textAllCaps="true" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="EMAIL ID"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_EMAILID"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="TUTOR@GMAIL.COM"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="ADDRERSS"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_ADDRESS"
                        android:layout_width="200dp"
                        android:layout_height="90dp"
                        android:background="@drawable/rounded_edit_text"

                        android:hint="HOUSE .NOXXXXXXX,RANCHI-834004"
                        android:inputType="textMultiLine"
                        android:paddingLeft="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="DESCRIPTION"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/form_DESCRIPTION"
                        android:layout_width="200dp"
                        android:layout_height="90dp"
                        android:background="@drawable/rounded_edit_text"
                        android:hint="Write something through which you can attract stuednts"
                        android:inputType="textMultiLine"
                        android:paddingLeft="20dp" />
                </LinearLayout>

                //details

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:gravity="center"
                        android:text="DETAILS"
                        android:textColor="#000000"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="96dp">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="Experience in teaching" />

                    <EditText
                        android:id="@+id/form_EXPERIENCE"
                        android:layout_width="130dp"
                        android:layout_height="30dp"
                        android:background="@drawable/right_halfcut"

                        android:hint="1"
                        android:inputType="number"
                        android:paddingLeft="20dp" />

                    <EditText
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/left_half_cut"
                        android:hint="Years"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="96dp">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="MINIMUM FEE" />

                    <EditText
                        android:id="@+id/form_fee"
                        android:layout_width="150dp"
                        android:layout_height="30dp"
                        android:background="@drawable/right_halfcut"
                        android:hint="500"
                        android:inputType="number"
                        android:paddingLeft="20dp" />


                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:background="@drawable/left_half_cut"
                        android:hint="Rs"
                        android:inputType="number" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="CLASSES UPTO TAUGHT" />

                    <Spinner
                        android:id="@+id/form_classes_upto_taught"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_subjectLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"

                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="SPECIFIED SUBJECT" />

                    <Spinner
                        android:id="@+id/form_specifiedsubject"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"

                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="NEAREST LOCATION" />

                    <Spinner
                        android:id="@+id/form_nearestLocation"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="20dp"

                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:text="CHOOSE YOUR PLACE OF TEACHING" />

                    <Spinner
                        android:id="@+id/form_placeOfTeaching"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />

                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/profile_not_uploaded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:text="Your profile is not uploaded"
                        android:textColor="#000000"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/profile_uploading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:paddingTop="12dp"
                        android:text="Your profile is uploading .Please wait..."
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/profile_uploaded"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:textColor="#000000"
                        android:text="Profile Uploaded"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <Button
                    android:id="@+id/uploaddata"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/circle_grey_backgrnd"
                    android:gravity="center"
                    android:text="upload data" />



            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tutor_progressLayout">

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/tutor_progressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewsubmit"
            app:layout_constraintStart_toEndOf="@+id/textViewsubmit"
            app:layout_constraintTop_toTopOf="@+id/textViewsubmit" />

        <TextView
            android:id="@+id/textViewsubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submiting"
            android:textColor="@color/colorPrimary"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>