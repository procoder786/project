<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTutorform">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        <!--            android:id="@+id/form_name"-->

            <!--            android:id="@+id/form_fee"-->
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ExtraText">            <!--                app:layout_constraintTop_toBottomOf="@+id/intt"-->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#00bbff"
                    android:gravity="center"
                    android:text="TUTORS"
                    android:textColor="#ffffff"
                    android:textSize="40sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="#00bbff"
                    android:gravity="center"
                    android:paddingTop="2dp"
                    android:text="Registration Form"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingTop="12dp"
                            android:text="Upload Profile"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:paddingBottom="12dp"
                            android:text="**Less than 200kb" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/UploadPic"
                        android:layout_width="70dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="65dp"
                        android:background="@drawable/ic_cloud_upload_black_24dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.554"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />


                </LinearLayout>


                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="horizontal">-->

                <!--                    <LinearLayout-->
                <!--                        android:layout_width="180dp"-->
                <!--                        android:layout_height="wrap_content"-->
                <!--                        android:orientation="vertical">-->

                <!--                        <TextView-->
                <!--                            android:layout_width="180dp"-->
                <!--                            android:layout_height="wrap_content"-->
                <!--                            android:paddingLeft="15dp"-->
                <!--                            android:paddingTop="12dp"-->
                <!--                            android:text="Upload Profile"-->
                <!--                            android:textSize="20sp" />-->

                <!--                        <TextView-->
                <!--                            android:layout_width="180dp"-->
                <!--                            android:layout_height="wrap_content"-->
                <!--                            android:paddingLeft="15dp"-->
                <!--                            android:paddingBottom="12dp"-->
                <!--                            android:text="**Less than 1 mb" />-->

                <!--                    </LinearLayout>-->

                <!--                    <Button-->
                <!--                        android:id="@+id/erro"-->
                <!--                        android:layout_width="70dp"-->
                <!--                        android:layout_height="60dp"-->
                <!--                        android:layout_marginLeft="65dp"-->
                <!--                        android:background="@drawable/ic_cloud_upload_black_24dp"-->
